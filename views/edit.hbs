<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <form action="/restaurants/{{restaurant._id}}/edit" method="POST" id="form" class="d-flex flex-column m-3" novalidate>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="please enter name ..." required value="{{restaurant.name}}">
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <div class="form-group">
          <label for="name_en">English Name</label>
          <input type="text" class="form-control" id="name_en" name="name_en" placeholder="please enter English name ..." value="{{restaurant.name_en}}">
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <div class="form-group">
          <label for="category">Category</label>
          <input list="category" class="form-control" name="category" placeholder="select category" value="{{restaurant.category}}">
          <datalist id="category">
            <option>中東料理</option>
            <option>日式料理</option>
            <option>義式料理</option>
            <option>美式料理</option>
            <option>酒吧</option>
            <option>咖啡</option>
          </datalist>
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="pleaser enter address ..." required value="{{restaurant.location}}">
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <div class="form-group">
          <label for="phone">Phone No.</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="please enter phone number ..." required value="{{restaurant.phone}}">
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <div class="form-group">
          <label>Rating</label>
          <div class="form-row">
            <div class="col">
              <input type="number" name="rating" class="form-control" min="0" max="10" step="0.1" placeholder="please rate" required value="{{restaurant.rating}}">
              <div class="valid-feedback">Good!</div>
              <div class="invalid-feedback">This field is required!</div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="google_map">Google Map</label>
          <input type="url" class="form-control" id="google_map" name="google_map" placeholder="please enter Google map url ..." value="{{restaurant.google_map}}">
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="url" class="form-control" id="image" name="image" placeholder="please enter image URL ..." value="{{restaurant.image}}">
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <div class="form-group">
          <label for="description" rows="3" cols="20">Description</label>
          <textarea class="form-control" placeholder="describe.." id="description" name="description" required>{{restaurant.description}}</textarea>
          <div class="valid-feedback">Good!</div>
          <div class="invalid-feedback">This field is required!</div>
        </div>
        <button id="submit-btn" type="submit" class="btn btn-success">Edit</button>
        <a href="/">Back</a>
      </form>
    </div>
  </div>
</div>