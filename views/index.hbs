<!-- search bar -->
<div class="container mt-5" style="width: 950px;">
  <form action="/searches">
    <div class="form-row d-flex justify-content-between mx-auto">
      <div class="form-group">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </div>
      <div class="form-group">
        <select id="inputState" class="form-control">
          <option selected>sort...</option>
          <option>A -> Z</option>
          <option>Z -> A</option>
          <option>Category</option>
          <option>Location</option>
        </select>
      </div>
      
    </div>
  </form>
  {{{ error }}}
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="Sababa 沙巴巴中東美食">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="container d-flex justify-content-center align-items-center mb-2">
              <a type="button" class="btn btn-info btn-sm m-2" href="/restaurants/{{ this._id }}/edit" style="color: white; text-decoration:none;">Edit</a>
              <a type="button" class="btn btn-info btn-sm m-2" href="/restaurants/{{ this._id }}" style="color: white; text-decoration:none;">Detail</a>
              <a role="button" class="btn btn-danger btn-sm ml-2" href="/restaurants/{{ this._id }}/delete" style="color: white; text-decoration:none;">Delete</a>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>